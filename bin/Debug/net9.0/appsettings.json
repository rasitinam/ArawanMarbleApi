{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information" // EF Core logları için
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./Data/ArawanMarble.db",
    "AlternativeConnection": "Data Source=/var/www/db/ArawanMarble.db" // Plesk/Linux için alternatif
  },
  "DatabaseOptions": {
    "RetryOnFailure": 5, // Hata durumunda yeniden deneme sayısı
    "CommandTimeout": 30, // Saniye cinsinden timeout
    "EnableSensitiveDataLogging": false // Production'da false olmalı
  }
}